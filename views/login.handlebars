<div class="row">
  <div class="loggingin-form">

    <form class="form login-form">
    <h2>Login</h2>
      <div class="form-group">
        <label for="email-login">Username:</label>
        <input class="form-input" type="text" id="username" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">

    <form class="form signup-form">
    <h2>Signup</h2>
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="signup-username" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="signup-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
